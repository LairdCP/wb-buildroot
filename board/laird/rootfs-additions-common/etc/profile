# /etc/profile - system-wide profile for the busybox almquist shell
# settings may be overridden by using a ~/.profile

export PATH=/usr/local/bin:/usr/bin:/usr/sbin:/bin:/sbin

# for running interactively:
if [ "$PS1" ]
then
  if [ "`id -u`" -eq 0 ]
  then 
    export PS1='# '
  else
    export PS1='$ '
  fi

  export USER=`id -un`
  export LOGNAME=$USER
  export HOSTNAME=`/bin/hostname`
  export HISTSIZE=1000
  export HISTFILESIZE=1000
  export INPUTRC=/etc/inputrc
  export PAGER=/bin/more
  export EDITOR=/bin/vi

  # ls variants
  alias ll='ls -l'
  alias la='ls -lA'

  # df variant
  alias df='df -h'

  # ps variant, show only userspace processess
  alias psu='ps -opid,stat,args |grep -vE "[ ]\[.*\]|[ ]ps\ "'

  # ps variant, show process hierarchy as forest
  alias psf='pstree -p'

  # shutdown
  alias shutdown='poweroff'
fi

# source any configuration files from /etc/profile.d
for i in /etc/profile.d/*.sh
do
  if [ -r "$i" ]
  then
    . $i
  fi
done

# set shell history to /tmp so that it is not writting it to flash
export HISTFILE=/tmp/$USER.ash_history

