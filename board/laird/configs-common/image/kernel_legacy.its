/dts-v1/;

/ {
	description = "Summit Linux FIT Image";

	images {
		kernel {
			description = "Summit Linux Kernel";
			data = /incbin/("Image.gz");
			type = "kernel";
			arch = "arm";
			os = "linux";
			compression = "gzip";
			load = <0x20008000>;
			entry = <0x20008000>;
			kernel-version = <1>;
		};

		fdt {
			description = "Flattened Device Tree blob";
			data = /incbin/("at91-wb50n.dtb");
			type = "flat_dt";
			arch = "arm";
			compression = "none";
			fdt-version = <1>;
		};
	};

	configurations {
		default = "config";

		config {
			description = "Summit Linux Kernel with FDT blob";
			kernel = "kernel";
			fdt = "fdt";
		};
	};
};
