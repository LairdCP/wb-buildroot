config BR2_PACKAGE_MFG60N
	bool "60 Series Radio Utilities"
	help
		Laird Manufacturing and Regulatory Tools

if BR2_PACKAGE_MFG60N
choice
	prompt "60 Series Radio Utilities"
	default BR2_PACKAGE_MFG60N_VENDOR

config BR2_PACKAGE_MFG60N_VENDOR
	depends on BR2_PACKAGE_BLUEZ5_UTILS || BR2_PACKAGE_BLUEZ_UTILS
	bool "Vendor Package"
	select BR2_PACKAGE_MFG60N_BTLRU
	select BR2_PACKAGE_MFG60N_LMU
	select BR2_PACKAGE_MFG60N_LRU
	select BR2_PACKAGE_MFG60N_LIBEDIT
	help
		Laird Manufacturing and Regulatory Tools for vendors

config BR2_PACKAGE_MFG60N_CUSTOM
	bool "Custom Package"
	help
		Select Individual Laird Manufacturing and Radio Tools

config BR2_PACKAGE_MFG60N_LRT
	bool "Radio Manufacturing Tool"
	select BR2_PACKAGE_LIBNL
	help
		Laird Radio Manufacturing Tool
endchoice

if !BR2_PACKAGE_MFG60N_LRT
config BR2_PACKAGE_MFG60N_LIBEDIT
	bool "Use Command Line Recall"
	select BR2_PACKAGE_LIBEDIT
	default y
	help
		Build vendor tools with support for libedit command line history

config BR2_PACKAGE_MFG60N_BTLRU
	depends on BR2_PACKAGE_BLUEZ5_UTILS || BR2_PACKAGE_BLUEZ_UTILS
	bool "Bluetooth Regulatory Tool"
	default y
	help
		Include Bluetooth Regulatory tool

config BR2_PACKAGE_MFG60N_LMU
	bool "Manufacturing Tool"
	select BR2_PACKAGE_LIBNL
	default y
	help
		Include Manufacturing tool

config BR2_PACKAGE_MFG60N_LRU
	bool "Wi-Fi Regulatory Tool"
	select BR2_PACKAGE_LIBNL
	select BR2_PACKAGE_LAIRD_FIRMWARE
	select BR2_PACKAGE_LAIRD_FIRMWARE_LRDMWL_SD8997_MFG
	default y
	help
		Include Wi-Fi Regulatory tool
endif
endif
