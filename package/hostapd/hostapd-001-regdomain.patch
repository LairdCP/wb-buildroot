diff -rupN a/hostapd/main.c b/hostapd/main.c
--- a/hostapd/main.c	2013-01-12 10:42:53.000000000 -0500
+++ b/hostapd/main.c	2015-09-29 10:05:54.000000000 -0400
@@ -27,6 +27,8 @@
 #include "dump_state.h"
 #include "ctrl_iface.h"
 
+#include <sdc_sdk.h>
+#include <sdc_sdk_private.h>
 
 extern int wpa_debug_level;
 extern int wpa_debug_show_keys;
@@ -175,6 +177,27 @@ static struct hostapd_iface * hostapd_in
 		goto fail;
 	hapd_iface->conf = conf;
 
+	if (strcmp(conf->bss[0].iface, "wlan0") == 0)
+	{
+		SDCERR ret;
+		const char * dom;
+
+		REG_DOMAIN regDomain = GetCurrentDomain();
+		ret = regDomain_to_iso3166(regDomain, &dom);
+		if (regDomain == 3 || ret != SDCERR_SUCCESS) {
+			wpa_printf(MSG_ERROR, "Failed to obtain valid country code");
+			goto fail;
+		}
+
+		os_memcpy(conf->country, dom, 2);
+	
+		ret = LRD_WF_ProgramRegulatoryDomain();
+		if (ret != SDCERR_SUCCESS) {
+			wpa_printf(MSG_ERROR, "Failed to setup regulatory domain");
+			goto fail;
+		}
+	}
+	
 	hapd_iface->num_bss = conf->num_bss;
 	hapd_iface->bss = os_calloc(conf->num_bss,
 				    sizeof(struct hostapd_data *));
