#!/bin/sh

[ -f /usr/bin/igconfd ] || exit 0

case "$1" in
        start)
                printf "Starting igconfd: "
		python /usr/bin/igconfd
                [ $? = 0 ] && echo "OK" || echo "FAIL"
                ;;
        stop)
                printf "Stopping igconfd: "
		kill `ps -o user,pid,args | grep -v grep | grep igconfd | awk '{ print $2 }'`
                [ $? = 0 ] && echo "OK" || echo "FAIL"
                ;;
        restart|reload)
                $0 stop
                $0 start
                ;;
        *)
                echo "Usage: $0 {start|stop|restart}"
                exit 1
esac

exit 0

