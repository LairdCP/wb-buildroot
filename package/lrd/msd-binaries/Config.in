config BR2_PACKAGE_MSD_BINARIES
	bool "MSD Installer"
	select BR2_PACKAGE_LIBNL
	help
      Extracts the Laird closed source binaries from an msd release and install them on the target.
      (sdcsupp, sdcsdk, sdc_cli, etc)

if BR2_PACKAGE_MSD_BINARIES

config BR2_MSD_BINARIES_COMPANY_PROJECT
	string "Laird Binaries company/project string"
	help
	  Specify the middle string of a msd name tag. I.e. company/project.
	  E.g. laird

config BR2_MSD_BINARIES_VERSION
	string "Laird Binaries version"
	help
	  Specify the version of sdcbins to use.
	  E.g. alpha.0.2

config BR2_MSD_BINARIES_WEBLCM
	bool "Laird webLCM"
    default y
	help
	  Install the webLCM from the MSD package.

config BR2_MSD_BINARIES_EVENTMON
	bool "Laird event monitor"
    default y
	help
	  Install the eventmon from the MSD package.

config BR2_MSD_BINARIES_SDCCLI
	bool "Laird SDC CLI"
    default y
	help
	  Install the SDC CLI from the MSD package.

config BR2_MSD_BINARIES_SDCSUPP
	bool "Laird SDC Supplicant"
    default y
	help
	  Install the SDC Supplicant from the MSD package.

config BR2_MSD_BINARIES_SMARTBASIC
	bool "Laird smartBASIC"
    default y
	help
	  Install the smartBASIC from the MSD package.

if BR2_MSD_BINARIES_SMARTBASIC
config BR2_MSD_BINARIES_SMARTBASIC_APPS
	bool "Laird smartBASIC apps"
    default y
	help
	  Install the smartBASIC apps from the MSD package.
endif

config BR2_MSD_BINARIES_LLAGENT
	bool "Laird Link agent"
    default y
	help
	  Install the Laird Link agent from the MSD package.

config BR2_MSD_BINARIES_LAIRD_FIRMWARE_AR6003
	bool "Laird 45-series"
	default n
	help
	  Install Laird's AR6003 firmware and calibration data for the 45
	  series radios.

config BR2_MSD_BINARIES_LAIRD_FIRMWARE_AR6004
	bool "Laird 50-series"
	default n
	help
	  Install Laird's AR6004 firmware and calibration data for the 50
	  series radios.

config BR2_MSD_BINARIES_LAIRD_FIRMWARE_BT
	bool "Bluetopia"
	default n
	help
	  Install bluetopia patchram for Laird's 50 series radios.
endif
